# ===========================================
# Production Environment Configuration
# ===========================================

# Database Configuration
POSTGRES_DB=intelligent_kitchen_prod
POSTGRES_USER=kitchen_prod_user
POSTGRES_PASSWORD=secure_prod_password_change_me

# Redis Configuration
REDIS_PASSWORD=secure_redis_password_change_me

# Backend Configuration
NODE_ENV=production
PORT=3001
JWT_SECRET=super_secure_jwt_secret_for_production_change_this_immediately
FRONTEND_URL=https://your-domain.com

# OpenRouter AI Configuration (REQUIRED)
OPENROUTER_API_KEY=***REMOVED***

# Using fast models for speed - Claude 3.5 Haiku is very fast and accurate
# Note: This is faster and cheaper than Mistral/Qwen while maintaining quality
OPENROUTER_MODEL_SMALL=anthropic/claude-3-5-haiku
OPENROUTER_MODEL_MEDIUM=anthropic/claude-3-5-haiku
OPENROUTER_MODEL_LARGE=anthropic/claude-3-5-haiku

# Fallback models for speed optimization (used when primary models fail)
OPENROUTER_SMART_FALLBACK_MODEL=anthropic/claude-3-haiku
OPENROUTER_EXTRACTION_FALLBACK_MODEL=anthropic/claude-3-haiku
OPENROUTER_VALIDATION_FALLBACK_MODEL=anthropic/claude-3-haiku

# AI Service Configuration
AI_ENABLE_CACHING=true
AI_CACHE_TTL=3600
AI_MAX_RETRIES=3
AI_TIMEOUT=30000
AI_ENABLE_STREAMING=true

# AI Rate Limiting
AI_RATE_LIMIT_REQUESTS_PER_MINUTE=20
AI_RATE_LIMIT_TOKENS_PER_DAY=1000000

# AI Cost Management
AI_ENABLE_COST_MONITORING=true
AI_COST_ALERT_THRESHOLD=100
AI_MAX_COST_PER_USER_MONTHLY=50

# External APIs (Optional)
SPOONACULAR_API_KEY=your-spoonacular-api-key
GOOGLE_CLOUD_API_KEY=your-google-cloud-api-key

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@your-domain.com
SMTP_PASS=your-email-password

# Security
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
MAX_FILE_SIZE=10485760
UPLOAD_PATH=uploads/

# Application Metadata
OPENROUTER_APP_TITLE=Intelligent Kitchen AI
APP_URL=https://your-domain.com