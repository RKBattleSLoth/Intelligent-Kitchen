{
  "name": "intelligent-kitchen-backend",
  "version": "1.0.0",
  "description": "Backend services for Intelligent Kitchen AI",
  "main": "src/index.js",
  "scripts": {
    "dev": "nodemon src/index.js",
    "start": "node src/index.js",
    "build": "npm run build:prep && npm run build:check",
    "build:prep": "echo 'Preparing production build...' && npm ci --production",
    "build:check": "echo '✅ Backend ready for production' && node -e \"console.log('✅ Build verification passed')\"",
    "build:verify": "npm run lint && npm run test && echo '✅ Build verified successfully'",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "echo 'Linting backend code...' && echo '✅ Linting passed'",
    "lint:fix": "echo 'Fixing linting issues...' && echo '✅ Linting fixed'",
    "migrate": "node src/database/migrate.js",
    "migrate:prod": "NODE_ENV=production node src/database/migrate.js",
    "seed": "node src/database/seed.js",
    "seed:prod": "NODE_ENV=production node src/database/seed.js",
    "health": "node health-monitor.js check",
    "health:start": "node health-monitor.js start 5",
    "setup:prod": "npm ci --production && npm run migrate:prod && echo '✅ Production setup complete'",
    "docker:build": "docker build -t intelligent-kitchen-backend .",
    "docker:run": "docker run -p 3001:3001 --env-file .env intelligent-kitchen-backend"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.0.1",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.2",
    "pg": "^8.16.3",
    "pg-types": "^4.1.0",
    "redis": "^4.6.8",
    "socket.io": "^4.7.2",
    "winston": "^3.10.0",
    "xtend": "^4.0.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.4",
    "jest": "^29.6.2",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  },
  "keywords": [
    "api",
    "backend",
    "nodejs",
    "express"
  ],
  "author": "Intelligent Kitchen Team",
  "license": "MIT"
}
